(* -------------------------------------------------------------------------- *)
class touchid : Ojs.t ->
  object
    inherit Ojs.obj
    (* ---------------------------------------------------------------------- *)
    method authenticate   : (unit -> unit)    -> (* success_cb *)
                            (unit -> unit)    -> (* error_cb if authentication
                                                    fails *)
                            string            -> (* text explaining why the
                                                    application needs access *)
                            unit
    (* ---------------------------------------------------------------------- *)

    (* ---------------------------------------------------------------------- *)
    method check_support  : (unit -> unit)    -> (* success_cb *)
                            (string -> unit)  -> (* error_cb *)
                            unit
    (* ---------------------------------------------------------------------- *)
  end
(* -------------------------------------------------------------------------- *)

(* -------------------------------------------------------------------------- *)
val t : unit -> touchid
[@@js.get "touchid"]
(* -------------------------------------------------------------------------- *)
